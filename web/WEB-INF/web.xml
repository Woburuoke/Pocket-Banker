<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>servlet.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
   
    <servlet>
        <servlet-name>Transfer</servlet-name>
        <servlet-class>servlet.Transfer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Transfer</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TransferConfirmation</servlet-name>
        <servlet-class>servlet.TransferConfirmation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferConfirmation</servlet-name>
        <url-pattern>/transferConfirmation</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TransferFinal</servlet-name>
        <servlet-class>servlet.TransferFinal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferFinal</servlet-name>
        <url-pattern>/transferFinal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Airtime</servlet-name>
        <servlet-class>servlet.Airtime</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Airtime</servlet-name>
        <url-pattern>/airtime</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AirtimeFinal</servlet-name>
        <servlet-class>servlet.AirtimeFinal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AirtimeFinal</servlet-name>
        <url-pattern>/airtimeFinal</url-pattern>
    </servlet-mapping>

    <error-page>
        <location>/errorPage</location>
    </error-page>
</web-app>
